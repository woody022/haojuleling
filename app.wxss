/* 基础边框 */
.border {
  border: 2rpx solid var(--border-color);
}
.border-top {
  border-top: 2rpx solid var(--border-color);
}
.border-bottom {
  border-bottom: 2rpx solid var(--border-color);
}
.border-left {
  border-left: 2rpx solid var(--border-color);
}
.border-right {
  border-right: 2rpx solid var(--border-color);
}

/* 隐藏样式 */
.hidden {
  display: none !important;
}

.invisible {
  visibility: hidden;
}

/* 文本省略号 */
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ellipsis-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.ellipsis-3 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

/* 弹性空间 */
.spacer {
  flex-grow: 1;
}

/* 加载中容器 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

/* 分隔线 */
.divider {
  height: 2rpx;
  background-color: var(--border-color);
  width: 100%;
  margin: var(--spacing-small) 0;
}

/* 页面底部安全距离 */
.safe-area-bottom {
  padding-bottom: var(--safe-area-inset-bottom);
}

/* 不可点击区域 */
.no-tap {
  pointer-events: none;
}

/* 可点击区域 */
.can-tap {
  position: relative;
}

.can-tap::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
}

/* 插入底部占位空间 */
.tabbar-placeholder {
  height: calc(100rpx + var(--safe-area-inset-bottom));
}