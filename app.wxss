/**app.wxss**/

/* 基础样式变量 */
page {
  --primary-color: #3B82F6;
  --primary-color-light: #60A5FA;
  --primary-color-dark: #2563EB;
  --secondary-color: #10B981;
  --accent-color: #F59E0B;
  --warning-color: #F97316;
  --danger-color: #EF4444;
  --success-color: #10B981;
  --text-color: #333333;
  --text-color-light: #666666;
  --text-color-lighter: #999999;
  --background-color: #F8F8F8;
  --card-background: #FFFFFF;
  --border-color: #EEEEEE;
  --border-radius: 12rpx;
  --font-size-large: 36rpx;
  --font-size-normal: 30rpx;
  --font-size-small: 24rpx;
  --font-size-mini: 20rpx;
  --line-height: 1.5;
  --spacing-mini: 8rpx;
  --spacing-small: 16rpx;
  --spacing-normal: 24rpx;
  --spacing-large: 32rpx;
  --safe-area-inset-bottom: env(safe-area-inset-bottom);
  
  /* 适老化相关变量 */
  --elderly-font-size-large: 42rpx;
  --elderly-font-size-normal: 36rpx;
  --elderly-font-size-small: 30rpx;
  --elderly-font-size-mini: 26rpx;
  --elderly-line-height: 1.8;
  --elderly-spacing: 1.2;
  
  /* 系统字体 */
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: var(--font-size-normal);
  line-height: var(--line-height);
  color: var(--text-color);
  background-color: var(--background-color);
  box-sizing: border-box;
}

/* 适老化模式 */
page.elderly-mode {
  font-size: var(--elderly-font-size-normal);
  line-height: var(--elderly-line-height);
  letter-spacing: var(--elderly-spacing);
}

/* 洒焰模式 */
page.high-contrast {
  --background-color: #000000;
  --card-background: #222222;
  --text-color: #FFFFFF;
  --text-color-light: #DDDDDD;
  --text-color-lighter: #BBBBBB;
  --border-color: #444444;
  
  background-color: var(--background-color);
  color: var(--text-color);
}

/* 容器 */
.container {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-bottom: calc(100rpx + var(--safe-area-inset-bottom));
}

/* 解决圆角问题 */
.border-radius-fix {
  overflow: hidden;
  position: relative;
}

/* 基础文本样式 */
.text-primary {
  color: var(--primary-color);
}

.text-secondary {
  color: var(--secondary-color);
}

.text-accent {
  color: var(--accent-color);
}

.text-success {
  color: var(--success-color);
}

.text-warning {
  color: var(--warning-color);
}

.text-danger {
  color: var(--danger-color);
}

.text-light {
  color: var(--text-color-light);
}

.text-lighter {
  color: var(--text-color-lighter);
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.text-bold {
  font-weight: bold;
}

.text-small {
  font-size: var(--font-size-small);
}

.text-large {
  font-size: var(--font-size-large);
}

/* 基础布局 */
.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-wrap {
  flex-wrap: wrap;
}

.justify-start {
  justify-content: flex-start;
}

.justify-end {
  justify-content: flex-end;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.justify-around {
  justify-content: space-around;
}

.align-start {
  align-items: flex-start;
}

.align-center {
  align-items: center;
}

.align-end {
  align-items: flex-end;
}

/* 卡片样式 */
.card {
  background-color: var(--card-background);
  border-radius: var(--border-radius);
  padding: var(--spacing-normal);
  margin-bottom: var(--spacing-normal);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 表单元素 */
.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--border-radius);
  padding: 0 var(--spacing-normal);
  font-size: var(--font-size-normal);
  color: var(--text-color);
  background-color: var(--card-background);
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--border-radius);
  padding: var(--spacing-small);
  font-size: var(--font-size-normal);
  color: var(--text-color);
  background-color: var(--card-background);
  box-sizing: border-box;
  line-height: 1.4;
}

/* 按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: var(--border-radius);
  font-size: var(--font-size-normal);
  font-weight: 500;
  text-align: center;
  border: none;
  background-color: var(--primary-color);
  color: white;
  cursor: pointer;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-primary {
  background-color: var(--primary-color);
  color: white;
}

.btn-secondary {
  background-color: var(--secondary-color);
  color: white;
}

.btn-accent {
  background-color: var(--accent-color);
  color: white;
}

.btn-success {
  background-color: var(--success-color);
  color: white;
}

.btn-warning {
  background-color: var(--warning-color);
  color: white;
}

.btn-danger {
  background-color: var(--danger-color);
  color: white;
}

.btn-outline {
  background-color: transparent;
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
}

.btn-block {
  display: flex;
  width: 100%;
}

.btn-large {
  padding: 24rpx 48rpx;
  font-size: var(--font-size-large);
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: var(--font-size-small);
}

.btn-mini {
  padding: 10rpx 20rpx;
  font-size: var(--font-size-mini);
  border-radius: calc(var(--border-radius) / 2);
}

.btn-disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn-disabled:active {
  opacity: 0.5;
  transform: none;
}

