/**\n * 好聚乐龄项目全局样式\n * 统一引入各样式模块，便于全局应用\n */\n\n/* 主题变量 */\n@import \"/common/styles/theme.wxss\";\n\n/* 布局系统 */\n@import \"/common/styles/layout.wxss\";\n\n/* 排版系统 */\n@import \"/common/styles/typography.wxss\";\n\n/* 表单元素 */\n@import \"/common/styles/form.wxss\";\n\n/* UI组件 */\n@import \"/common/styles/ui.wxss\";\n\n/* 自定义组件 */\n@import \"/common/styles/components.wxss\";\n\n/* 活动相关组件 */\n@import \"/common/styles/activity.wxss\";\n\n/**\n * 全局基础样式\n */\npage {\n  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,\n    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',\n    sans-serif;\n  font-size: 28rpx;\n  color: var(--text-primary);\n  background-color: var(--bg-light);\n  line-height: 1.6;\n  box-sizing: border-box;\n}\n\n/* 视图容器样式 */\nview, text, navigator, button, input, textarea, image {\n  box-sizing: border-box;\n}\n\n/* 隐藏滚动条但保持功能 */\n::-webkit-scrollbar {\n  width: 0;\n  height: 0;\n  color: transparent;\n}\n\n/* 强制换行 */\n.wrap {\n  word-break: break-all;\n  white-space: normal;\n}\n\n/* 单行省略 */\n.ellipsis {\n  overflow: hidden;\n  white-space: nowrap;\n  text-overflow: ellipsis;\n}\n\n/* 多行省略 */\n.ellipsis-2 {\n  display: -webkit-box;\n  -webkit-box-orient: vertical;\n  -webkit-line-clamp: 2;\n  overflow: hidden;\n}\n\n.ellipsis-3 {\n  display: -webkit-box;\n  -webkit-box-orient: vertical;\n  -webkit-line-clamp: 3;\n  overflow: hidden;\n}\n\n/* 清除浮动 */\n.clearfix:after {\n  content: \"\";\n  display: block;\n  clear: both;\n}\n\n/* 安全区域适配 */\n.safe-bottom {\n  padding-bottom: env(safe-area-inset-bottom);\n}\n\n.safe-top {\n  padding-top: env(safe-area-inset-top);\n}\n\n/* 禁用点击 */\n.disabled {\n  opacity: 0.5;\n  pointer-events: none;\n}\n\n/* 隐藏元素 */\n.hidden {\n  display: none !important;\n}\n\n/* 内容为空的提示 */\n.empty-tip {\n  display: flex;\n  flex-direction: column;\n  align-items: center;\n  justify-content: center;\n  padding: 60rpx 30rpx;\n  color: var(--text-secondary);\n  text-align: center;\n}\n\n.empty-icon {\n  width: 160rpx;\n  height: 160rpx;\n  margin-bottom: 20rpx;\n  opacity: 0.5;\n}\n\n.empty-text {\n  font-size: 28rpx;\n}\n\n/* 加载提示 */\n.loading-container {\n  display: flex;\n  flex-direction: column;\n  align-items: center;\n  justify-content: center;\n  padding: 40rpx;\n}\n\n.spinner {\n  width: 60rpx;\n  height: 60rpx;\n  border-radius: 50%;\n  border: 6rpx solid var(--border-light);\n  border-top-color: var(--primary);\n  animation: spin 1s infinite linear;\n}\n\n@keyframes spin {\n  0% {\n    transform: rotate(0deg);\n  }\n  100% {\n    transform: rotate(360deg);\n  }\n}\n\n/**\n * 小程序主样式入口文件\n */\n\n/* 基础页面容器 */\n.container {\n  min-height: 100vh;\n  background-color: var(--background);\n  color: var(--text-dark);\n}\n\n/* 内容安全区域 */\n.safe-area-container {\n  padding-bottom: env(safe-area-inset-bottom);\n}\n\n/* 基础页面底部占位，防止内容被底部导航栏遮挡 */\n.bottom-placeholder {\n  height: 100rpx;\n}\n\n/* 底部TabBar有额外高度时 */\n.bottom-placeholder-with-tab {\n  height: calc(100rpx + env(safe-area-inset-bottom));\n}\n\n/* 全局按钮样式 */\n.btn {\n  display: inline-flex;\n  align-items: center;\n  justify-content: center;\n  padding: 20rpx 40rpx;\n  border-radius: 8rpx;\n  font-size: 28rpx;\n  line-height: 1.5;\n  transition: all 0.3s;\n  border: none;\n}\n\n.btn-primary {\n  background-color: var(--primary);\n  color: #fff;\n}\n\n.btn-secondary {\n  background-color: var(--secondary);\n  color: #fff;\n}\n\n.btn-outline {\n  background-color: transparent;\n  border: 2rpx solid var(--primary);\n  color: var(--primary);\n}\n\n.btn-disabled {\n  background-color: var(--disabled);\n  color: var(--text-disabled);\n  cursor: not-allowed;\n}\n\n/* 卡片样式 */\n.card {\n  background-color: #fff;\n  border-radius: 16rpx;\n  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);\n  margin-bottom: 20rpx;\n  overflow: hidden;\n}\n\n.card-header {\n  padding: 24rpx 30rpx;\n  border-bottom: 2rpx solid var(--border-light);\n  display: flex;\n  align-items: center;\n  justify-content: space-between;\n}\n\n.card-body {\n  padding: 30rpx;\n}\n\n.card-footer {\n  padding: 24rpx 30rpx;\n  border-top: 2rpx solid var(--border-light);\n  display: flex;\n  align-items: center;\n  justify-content: space-between;\n}\n\n/* 表单样式 */\n.form-group {\n  margin-bottom: 30rpx;\n}\n\n.form-label {\n  display: block;\n  margin-bottom: 16rpx;\n  font-size: 28rpx;\n  color: var(--text-secondary);\n}\n\n.form-input {\n  width: 100%;\n  height: 80rpx;\n  padding: 0 24rpx;\n  border: 2rpx solid var(--border-base);\n  border-radius: 8rpx;\n  font-size: 28rpx;\n  background-color: #fff;\n}\n\n.form-textarea {\n  width: 100%;\n  padding: 20rpx 24rpx;\n  border: 2rpx solid var(--border-base);\n  border-radius: 8rpx;\n  font-size: 28rpx;\n  background-color: #fff;\n  min-height: 200rpx;\n}\n\n/* 长按钮，适合移动端底部固定操作 */\n.btn-long {\n  width: 100%;\n  height: 90rpx;\n  font-size: 32rpx;\n  border-radius: 45rpx;\n}\n\n/* 图标按钮 */\n.btn-icon {\n  display: inline-flex;\n  align-items: center;\n  justify-content: center;\n  width: 80rpx;\n  height: 80rpx;\n  border-radius: 50%;\n  background-color: var(--bg-gray);\n  color: var(--text-secondary);\n}\n\n/* 标签样式 */\n.tag {\n  display: inline-flex;\n  align-items: center;\n  padding: 8rpx 16rpx;\n  border-radius: 6rpx;\n  font-size: 24rpx;\n  line-height: 1.2;\n  margin-right: 16rpx;\n  margin-bottom: 16rpx;\n}\n\n.tag-primary {\n  background-color: var(--primary-light);\n  color: var(--primary);\n}\n\n.tag-success {\n  background-color: var(--success-light);\n  color: var(--success);\n}\n\n.tag-warning {\n  background-color: var(--warning-light);\n  color: var(--warning);\n}\n\n.tag-danger {\n  background-color: var(--danger-light);\n  color: var(--danger);\n}\n\n/* 列表样式 */\n.list-item {\n  display: flex;\n  align-items: center;\n  padding: 30rpx;\n  border-bottom: 2rpx solid var(--border-light);\n  background-color: #fff;\n}\n\n.list-item:last-child {\n  border-bottom: none;\n}\n\n.list-item-content {\n  flex: 1;\n}\n\n.list-item-title {\n  font-size: 30rpx;\n  color: var(--text-primary);\n  margin-bottom: 8rpx;\n}\n\n.list-item-desc {\n  font-size: 26rpx;\n  color: var(--text-secondary);\n}\n\n.list-item-avatar {\n  width: 80rpx;\n  height: 80rpx;\n  border-radius: 50%;\n  margin-right: 20rpx;\n}\n\n/* 老年人友好的大字体模式 */\n.large-text {\n  font-size: 120%;\n  line-height: 1.7;\n}