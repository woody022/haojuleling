/* components/activity-card/index.wxss */

.activity-card {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.card-left {
  position: relative;
  margin-right: 20rpx;
}

.activity-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.activity-status {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1;
}

.status-recruiting {
  background-color: rgba(60, 197, 31, 0.8);
}

.status-ongoing {
  background-color: rgba(24, 144, 255, 0.8);
}

.status-completed {
  background-color: rgba(153, 153, 153, 0.8);
}

.status-canceled {
  background-color: rgba(255, 77, 79, 0.8);
}

.card-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.activity-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.activity-type {
  margin-bottom: 15rpx;
}

.type-text {
  display: inline-block;
  font-size: 22rpx;
  color: #3cc51f;
  padding: 2rpx 12rpx;
  background-color: rgba(60, 197, 31, 0.1);
  border-radius: 4rpx;
}

.activity-info {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-icon {
  width: 30rpx;
  text-align: center;
  margin-right: 10rpx;
  font-size: 24rpx;
}

.info-text {
  flex: 1;
}

.ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.organizer-info {
  display: flex;
  align-items: center;
}

.organizer-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.organizer-name {
  font-size: 24rpx;
  color: #999;
}

.action-wrapper {
  display: flex;
}

.action-button {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 15rpx;
}

.action-icon {
  font-size: 28rpx;
  color: #999;
}

.favorite-active {
  background-color: rgba(255, 77, 79, 0.1);
}

.favorite-active .action-icon {
  color: #ff4d4f;
}