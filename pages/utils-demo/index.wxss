/* pages/utils-demo/index.wxss */
.container {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.header {
  margin-bottom: 30rpx;
  text-align: center;
  padding: 30rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.description {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.test-item {
  margin-bottom: 30rpx;
}

.test-title {
  font-size: 28rpx;
  color: #444;
  margin-bottom: 16rpx;
  display: block;
}

.input-group {
  display: flex;
  align-items: center;
}

.input {
  flex: 1;
  height: 80rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  background-color: #fff;
}

.btn {
  height: 80rpx;
  min-width: 160rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 6rpx;
  padding: 0 20rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.display-box {
  background-color: #f9f9f9;
  border: 1px solid #eee;
  border-radius: 6rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #666;
}

.display-box text {
  display: block;
  margin-bottom: 10rpx;
}

.code-box {
  background-color: #f9f9f9;
  border: 1px solid #eee;
  border-radius: 6rpx;
  padding: 20rpx;
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #333;
  max-height: 400rpx;
  font-family: monospace;
  white-space: pre-wrap;
  word-break: break-all;
}

.form {
  padding: 10rpx 0;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.error-text {
  font-size: 24rpx;
  color: #e64340;
  margin-top: 8rpx;
  display: block;
}

.submit-btn {
  margin-top: 30rpx;
  width: 100%;
}

.result-list {
  max-height: 400rpx;
}

.result-item {
  background-color: #f9f9f9;
  border-radius: 6rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.result-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.result-time {
  font-size: 24rpx;
  color: #999;
}

.result-content {
  font-size: 26rpx;
  color: #666;
  word-break: break-all;
}

.mini-btn {
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #f2f2f2;
  color: #666;
}