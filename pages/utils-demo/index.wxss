/* pages/utils-demo/index.wxss */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background: linear-gradient(to right, #07c160, #10aeff);
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  text-align: center;
}

.section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.results-container {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.results-list {
  max-height: 300rpx;
}

.result-item {
  padding: 16rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  color: #666;
}

.result-item:last-child {
  border-bottom: none;
}

.empty-results {
  padding: 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.form-container {
  padding: 20rpx 0;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.error-text {
  color: #e64340;
  font-size: 24rpx;
  margin-top: 10rpx;
  display: block;
}

.network-result {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #f0f9eb;
  border-radius: 8rpx;
  border: 1rpx solid #e1f3d8;
  color: #67c23a;
  font-size: 28rpx;
}