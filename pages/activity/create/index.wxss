/* pages/activity/create/index.wxss */

/* 容器样式 */
.container {
  padding: 30rpx;
  padding-top: calc(30rpx + var(--nav-height, 88px));
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 表单样式 */
.form-group {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 240rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-picker {
  width: 100%;
  height: 80rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.arrow {
  color: #999;
  font-size: 24rpx;
  transform: rotate(90deg);
}

.placeholder {
  color: #999;
}

.form-tip {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 8rpx;
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 上传图片样式 */
.upload-container {
  display: flex;
  flex-wrap: wrap;
}

.upload-button {
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f7fa;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  color: #999;
  font-size: 24rpx;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.upload-preview {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  position: relative;
  overflow: hidden;
}

.upload-preview image {
  width: 100%;
  height: 100%;
}

.upload-delete {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

/* 位置选择器样式 */
.location-picker {
  width: 100%;
  height: 80rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.location-placeholder {
  color: #999;
}

.location-text {
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.icon-location {
  font-size: 32rpx;
  margin-left: 10rpx;
}

/* 时间选择器按钮样式 */
.time-picker-trigger {
  width: 100%;
  height: 80rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.time-placeholder {
  color: #999;
}

.time-text {
  color: #333;
}

.icon-calendar {
  font-size: 32rpx;
  margin-left: 10rpx;
}

/* 提交按钮样式 */
.form-submit {
  margin-top: 50rpx;
  margin-bottom: 30rpx;
}

.submit-button {
  width: 100%;
  height: 88rpx;
  background-color: #3cc51f;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  background-color: #fff;
  z-index: 999;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-content {
  position: absolute;
  width: 100%;
  height: 44px;
  display: flex;
  align-items: center;
  padding: 0 15rpx;
}

.nav-back {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 36rpx;
  color: #333;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}