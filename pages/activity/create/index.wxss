/* pages/activity/create/index.wxss */

.activity-create-container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
}

/* 表单样式 */
.form-container {
  margin-bottom: 40rpx;
}

.form-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  border-left: 8rpx solid #07c160;
  padding-left: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
}

.required {
  color: #e64340;
  margin-left: 8rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #fafafa;
}

.error-text {
  font-size: 24rpx;
  color: #e64340;
  margin-top: 10rpx;
}

/* 选择器样式 */
.picker-text {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #fafafa;
  display: flex;
  align-items: center;
}

.placeholder {
  color: #999;
}

/* 文本区域样式 */
.textarea-container {
  position: relative;
  width: 100%;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #fafafa;
}

.textarea-counter {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.textarea-counter.error {
  color: #e64340;
}

/* 地点选择样式 */
.location-input-group {
  display: flex;
  align-items: center;
}

.location-input {
  flex: 1;
  margin-right: 20rpx;
}

.location-btn {
  width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
  font-size: 28rpx;
  background-color: #07c160;
  color: #fff;
}

.address-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  padding: 0 20rpx;
}

/* 时间选择样式 */
.time-item {
  position: relative;
}

.time-picker {
  width: 100%;
}

/* 滑块样式 */
.slider-item {
  margin-bottom: 40rpx;
}

.slider-container {
  padding: 0 20rpx;
  margin-top: 20rpx;
}

/* 标签样式 */
.tag-input-group {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tag-input {
  flex: 1;
  margin-right: 20rpx;
}

.tag-btn {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
  font-size: 28rpx;
  background-color: #07c160;
  color: #fff;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  background-color: #e6f7f1;
  padding: 10rpx 20rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.tag-text {
  font-size: 26rpx;
  color: #07c160;
  margin-right: 10rpx;
}

.tag-remove {
  font-size: 28rpx;
  color: #07c160;
  font-weight: bold;
}

/* 图片上传样式 */
.cover-upload-container {
  margin-bottom: 20rpx;
}

.cover-upload-box {
  width: 100%;
  height: 320rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fafafa;
}

.upload-icon {
  font-size: 60rpx;
  color: #ccc;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #999;
}

.cover-preview {
  position: relative;
  width: 100%;
  height: 320rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.image-remove {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.images-container {
  display: flex;
  flex-wrap: wrap;
}

.image-upload-box {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fafafa;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.image-preview {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.activity-image {
  width: 100%;
  height: 100%;
}

/* 开关设置项样式 */
.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.switch-label {
  font-size: 28rpx;
  color: #333;
}

/* 表单操作按钮 */
.form-actions {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0 60rpx 0;
}

.cancel-btn {
  width: 45%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #f8f8f8;
  color: #333;
  border: 1rpx solid #ddd;
  font-size: 32rpx;
}

.submit-btn {
  width: 45%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
}

.submit-btn.disabled {
  background-color: #a5e1c0;
}

/* 时间选择器弹窗样式 */
.picker-modal {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.picker-mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
}

.picker-content {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.picker-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.picker-close {
  font-size: 40rpx;
  color: #999;
}

.time-picker-view {
  width: 100%;
  height: 400rpx;
}

.picker-actions {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.picker-cancel, 
.picker-confirm {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.picker-cancel {
  background-color: #f8f8f8;
  color: #333;
  border: 1rpx solid #ddd;
}

.picker-confirm {
  background-color: #07c160;
  color: #fff;
}