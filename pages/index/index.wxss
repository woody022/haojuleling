gory-name {\n  font-size: 24rpx;\n  color: #666666;\n}\n\n/* 活动列表 */\n.activity-section {\n  margin: 20rpx 0;\n  padding: 30rpx 0;\n  background-color: #FFFFFF;\n}\n\n.activity-list {\n  padding: 0 30rpx;\n}\n\n.activity-card {\n  display: flex;\n  margin-bottom: 30rpx;\n  background-color: #F8FAFD;\n  border-radius: 12rpx;\n  overflow: hidden;\n  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);\n}\n\n.activity-image {\n  width: 200rpx;\n  height: 200rpx;\n  flex-shrink: 0;\n}\n\n.activity-info {\n  flex: 1;\n  padding: 20rpx;\n  display: flex;\n  flex-direction: column;\n  justify-content: space-between;\n}\n\n.activity-title {\n  font-size: 30rpx;\n  font-weight: bold;\n  color: #333333;\n  margin-bottom: 12rpx;\n  display: -webkit-box;\n  -webkit-box-orient: vertical;\n  -webkit-line-clamp: 2;\n  overflow: hidden;\n}\n\n.activity-meta {\n  margin-bottom: 12rpx;\n}\n\n.activity-time, .activity-location {\n  display: flex;\n  align-items: center;\n  margin-bottom: 8rpx;\n}\n\n.meta-icon {\n  width: 24rpx;\n  height: 24rpx;\n  margin-right: 8rpx;\n}\n\n.meta-text {\n  font-size: 24rpx;\n  color: #666666;\n  max-width: 320rpx;\n}\n\n.activity-stats {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n}\n\n.activity-participants {\n  font-size: 24rpx;\n  color: #3B82F6;\n}\n\n.activity-category, .activity-distance {\n  font-size: 22rpx;\n  color: #999999;\n  background-color: #F0F4FF;\n  padding: 4rpx 12rpx;\n  border-radius: 6rpx;\n}\n\n/* 位置提示 */\n.location-tip {\n  display: flex;\n  align-items: center;\n  justify-content: center;\n  padding: 30rpx;\n  margin: 20rpx 30rpx;\n  background-color: #F0F4FF;\n  border-radius: 12rpx;\n}\n\n.location-icon {\n  width: 48rpx;\n  height: 48rpx;\n  margin-right: 16rpx;\n}\n\n.location-text {\n  font-size: 28rpx;\n  color: #666666;\n  margin-right: 20rpx;\n}\n\n.location-btn {\n  font-size: 26rpx;\n  color: #FFFFFF;\n  background-color: #3B82F6;\n  border-radius: 30rpx;\n  padding: 6rpx 20rpx;\n  line-hei